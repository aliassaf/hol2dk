\ifbeamer@inriaLightOnDark
  \setbeamercolor{palette primary}   {bg=white,fg=INRIAa}
  \setbeamercolor{palette secondary} {bg=white,fg=INRIAb}
  \setbeamercolor{palette tertiary}  {bg=white,fg=INRIAc}
  \setbeamercolor{palette quaternary}{bg=white,fg=INRIAf}
\else
	\setbeamercolor{palette primary}   {fg=white,bg=INRIAa}
  \setbeamercolor{palette secondary} {fg=white,bg=INRIAb}
  \setbeamercolor{palette tertiary}  {fg=white,bg=INRIAc}
  \setbeamercolor{palette quaternary}{fg=white,bg=INRIAf}
\fi


\setbeamercolor{palette sidebar primary}   {use=palette primary,   fg=palette primary.fg,   bg=palette primary.bg}
\setbeamercolor{palette sidebar secondary} {use=palette secondary, fg=palette secondary.fg, bg=palette secondary.bg}
\setbeamercolor{palette sidebar tertiary}  {use=palette tertiary,  fg=palette tertiary.fg,  bg=palette tertiary.bg}
\setbeamercolor{palette sidebar quaternary}{use=palette quaternary,fg=palette quaternary.fg,bg=palette quaternary.bg}

