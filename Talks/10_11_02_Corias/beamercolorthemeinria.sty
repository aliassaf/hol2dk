\setbeamercolor{sidebar}{parent=palette primary}

% The color aren't very contrasted, so let's increase the contrast for the shades
\setbeamertemplate{section in head/foot shaded}[default][75]
\setbeamertemplate{subsection in head/foot shaded}[default][75]
\setbeamertemplate{section in toc shaded}[default][50]
\setbeamertemplate{subsection in toc shaded}[default][50]
\setbeamertemplate{subsubsection in toc shaded}[default][50]

\ifbeamer@inriaLightOnDark
  \setbeamercolor{normal text} {fg=white}
  \setbeamercolor{structure}   {fg=white,bg=INRIAf}
  \setbeamercolor{example text}{fg=white,bg=INRIAd}
  \setbeamercolor{alerted text}{fg=red!80!white}
\else
	\setbeamercolor{structure}   {fg=INRIAf}
  \setbeamercolor{example text}{fg=INRIAd}
  \setbeamercolor{block title example}{use={sidebar,example text},fg=sidebar.fg!20!example text.fg}
\fi

\setbeamercolor{logo}{bg=white}

\setbeamercolor{item projected}      {use=palette primary,  fg=palette primary.fg,  bg=palette primary.bg}
\setbeamercolor{subitem projected}   {use=palette secondary,fg=palette secondary.fg,bg=palette secondary.bg}
\setbeamercolor{subsubitem projected}{use=palette tertiary, fg=palette tertiary.fg, bg=palette tertiary.bg}
